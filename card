	<?php
	if(isset($_POST["sbtn"])){
		$rollno=test_input($_POST["rollno"]);
		$st_qry="select * from lms.registration where Roll_no=$rollno ";
		$student_query=mysqli_query($st_qry);
		$st_count=mysqli_num_rows($student_query);
		if($st_count==1){
			$st_data=mysqli_fetch_array($student_query);
			$_POST['rollno']=  $st_data['Roll_no'];
			$_POST['s_name'] =  $st_data['S_name'];
			$_POST['s_class'] = $st_data['class'];
			$_POST['s_section'] = $st_data['section'];
			$_POST['s_session']=$st_data['session'];
			$_POST['sec_fee']=$st_data['Sec_fee'];
			$_POST['contact']=$st_data['contact'];
			$_POST['gender']=$st_data['Gender'];
			$_POST['Exp_date']=$st_data['Exp_date'];
			$_POST['S_Address']=$st_data['S_Address'];
			$_POST['PIC']=$st_data['S_pic'];	
			$_POST['Acc_status']=$st_data['Acc_status'];
			?>
